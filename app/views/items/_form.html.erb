<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :item_name %>
  </div>

  <div class="field">
    <%= form.label :item_condition %>
    <%= form.text_area :description, id: :item_description %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.number_field :version, id: :item_version%>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :item_price %>
  </div>

  <div class="field">
    <%= form.label :image_data %>
    <%= form.file_field :image, id: :item_image_data %>
  </div>

  <div class="field">
    <%= form.label :brand %>
    <%= form.select :category, ["Sony", "Pioneer", "Ableton", "Yamaha"]%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
