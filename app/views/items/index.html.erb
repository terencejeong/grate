<%= link_to 'New Item', new_item_path %>

<div class="container">
<div class="row">
<% @items.each do |item| %>
  <div class="card col-12 col-sm-4">
    <img class="card-img-top" src="<%= item.image_url%>" alt="Card image cap">
    <div class="card-block">
      <h4 class="card-title"><%=item.description%></h4>
      <p class="card-text">$<%=item.price%></p>
      <% if item.user = current_user %>
      <p class='card-text'><%= link_to 'Show', item %></td>
        <%= link_to 'Edit', edit_item_path(item) %></td>
        <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <%end%>
    </div>
  </div>
  <% end %>
  </div>
</div>
